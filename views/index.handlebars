<div class='container-fluid'>
    <div class='row'>
        <div class="col-md-6 offset-md-3">
            <img src='/assets/img/logo.jpg' class='img-fluid mt-3'>
        </div>
    </div>
    <div class='row mt-5'>
        <div class="col-md-4 offset-md-2 ready-to-eat">
            <h1>Ready to eat!</h1>
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block devoured=true}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-4 devoured-burgers">
            <h1>Burgers defeated!</h1>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burgers/burger-block devoured=false}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <footer>
        <div class="col-md-6 offset-md-4 mt-5">
            <h2>Try your hand at a burger!</h2>
            <form class="create-form">
                <div class="form-group">
                    <label for="burger">Burger name:</label>
                    <input type="text" id="burger" burger_name="burger_name">
                </div>

                <div class="form-group">
                    <label for="devoured">Eaten?</label>
                    <br>
                    <input type="radio" burger_name="devoured" value="1" checked> It was delicious!
                    <br>
                    <input type="radio" burger_name="devoured" value="0"> Not yet!
                </div>

                <button type="submit">Add burger</button>
            </form>
        </div>
    </footer>
</div>